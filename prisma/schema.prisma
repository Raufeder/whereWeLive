datasource db {
  provider             = "mysql"
  url                  = "https://where-we-live.vercel.app/"
  referentialIntegrity = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

model Vote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  votedFor       City @relation(name: "votesFor", fields: [votedForId], references: [id])
  votedForId     Int
  votedAgainst   City @relation(name: "votesAgainst", fields: [votedAgainstId], references: [id])
  votedAgainstId Int

  @@index([votedForId])
  @@index([votedAgainstId])
}

model City {
  id              Int    @id @default(autoincrement())
  city            String
  region          String
  regionCode      String
  population      Int
  averageRent     Int
  walkScore       Int
  transitScore    Int
  bikeScore       Int
  nonViolentCrime Float
  violentCrime    Float
  crimePercentile Int
  VoteFor         Vote[] @relation("votesFor")
  VoteAgainst     Vote[] @relation("votesAgainst")
}
